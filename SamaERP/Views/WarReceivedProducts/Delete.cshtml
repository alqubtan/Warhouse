@model SamaERP.Models.WarReceivedProduct

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container body">
    <div class="main_container">
        <div class="right_col" role="main">
            <div>
                <div class="x_panel bg-transparent">
                    <div class="x_content">
                        <h3>Are you sure you want to delete this?</h3>
                        <div>
                            <h4>@Html.DisplayFor(model =>  model.ProductName)</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-2">
                                    Product Name
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ProductName)
                                </dd>
                                <dt class="col-sm-2">
                                    Serial Number
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.SNumber)
                                </dd>
                                <dt class="col-sm-2">
                                    Barcode
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ProductBarcode)
                                </dd>
                                <dt class="col-sm-2">
                                    Product Supplier
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ProductSupplier)
                                </dd>
                                <dt class="col-sm-2">
                                    Product Unit
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ProductUnit)
                                </dd>
                                <dt class="col-sm-2">
                                    Quantity
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ProductQty)
                                </dd>

                                <dt class="col-sm-2">
                                    Branch 
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.BranchName)
                                </dd>
                                <dt class="col-sm-2">
                                    Warehouse
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.WarehouseName)
                                </dd>
                                <dt class="col-sm-2">
                                    Expire Date
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ProductExpireDate)
                                </dd>
                                <dt class="col-sm-2">
                                    Recived Date
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.RecivedDate)
                                </dd>
                                <dt class="col-sm-2">
                                    Invoice Number
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.InvoiceNumber)
                                </dd>
                                <dt class="col-sm-2">
                                    Invoice Date
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.InvoiceDate)
                                </dd>
                            </dl>

                            <form asp-action="Delete">
                                <input type="hidden" asp-for="ID" />
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                <a asp-action="Index">Back to List</a>
                            </form>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
