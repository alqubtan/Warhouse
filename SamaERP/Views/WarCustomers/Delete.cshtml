@model SamaERP.Models.WarCustomer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container body">
    <div class="main_container">
        <div class="right_col" role="main">
            <div>
                <div class="x_panel bg-transparent">
                    <div class="x_content">
                        <h3>Are you sure you want to delete this?</h3>
                        <div>
                            <h4>@Html.DisplayFor(model => model.CustomerName)</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-2">
                                    Customer Name
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CustomerName)
                                </dd>
                                <dt class="col-sm-2">
                                    Customer Type
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CustomerType)
                                </dd>
                                <dt class="col-sm-2">
                                    Customer Department
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CustomerDepartment)
                                </dd>
                                <dt class="col-sm-2">
                                    Customer Description
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CustomerDecription)
                                </dd>
                                <dt class="col-sm-2">
                                    Customer PhoneNo.
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CustomerPhoneNo)
                                </dd>
                                <dt class="col-sm-2">
                                    Customer E-mail
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CustomerEmail)
                                </dd>
                                <dt class="col-sm-2">
                                    Customer Address
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CustomerAddress)
                                </dd>
                                <dt class="col-sm-2">
                                    Customer Country
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CustomerCountry)
                                </dd>
                                <dt class="col-sm-2">
                                    Customer City
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CustomerCity)
                                </dd>
                            </dl>

                            <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                <a asp-action="Index">Back to List</a>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


