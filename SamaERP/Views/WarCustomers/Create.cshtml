@model SamaERP.Models.WarCustomer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container body">
    <div class="main_container">
        <div class="right_col" role="main">
            <div>
                <div class="x_panel bg-transparent">
                    <div class="x_content">
                        <h5 class="p-md-2">Add New Customer.</h5>
                        <div class="row">
                            <div class="col-12">
                                <form asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group row input-group-sm">
                                        <label asp-for="CustomerName" class="control-label">Customer Name</label>
                                        <input asp-for="CustomerName" class="form-control" />
                                        <span asp-validation-for="CustomerName" class="text-danger">@ViewBag.exist_err</span>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group row input-group-sm col-6 mr-2">
                                            <label asp-for="CustomerType" class="control-label">Customer Type</label>
                                            <select class="form-control bg-transparent" asp-for="CustomerType" asp-items="ViewBag.customerTypes ?? new List<SelectListItem>();">
                                                <option value="value">Choose customer type</option>
                                            </select>
                                            <span asp-validation-for="CustomerType" class="text-danger"></span>
                                        </div>
                                        <div class="form-group row input-group-sm col-6">
                                            <label asp-for="CustomerDepartment" class="control-label">Customer Department</label>
                                            <input asp-for="CustomerDepartment" class="form-control" />
                                            <span asp-validation-for="CustomerDepartment" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row input-group-sm">
                                        <label asp-for="CustomerDecription" class="control-label">Customer Decription</label>
                                        <input asp-for="CustomerDecription" class="form-control" />
                                        <span asp-validation-for="CustomerDecription" class="text-danger"></span>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group row input-group-sm col-6 mr-2">
                                            <label asp-for="CustomerPhoneNo" class="control-label">Customer PhoneNo</label>
                                            <input asp-for="CustomerPhoneNo" class="form-control" />
                                            <span asp-validation-for="CustomerPhoneNo" class="text-danger"></span>
                                        </div>
                                        <div class="form-group row input-group-sm col-6">
                                            <label asp-for="CustomerEmail" class="control-label">Customer Email</label>
                                            <input asp-for="CustomerEmail" class="form-control" />
                                            <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row input-group-sm">
                                        <label asp-for="CustomerAddress" class="control-label">Customer Address</label>
                                        <input asp-for="CustomerAddress" class="form-control" />
                                        <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group row input-group-sm col-6 mr-2">
                                            <label asp-for="CustomerCountry" class="control-label">Customer Country</label>
                                            <input asp-for="CustomerCountry" class="form-control" />
                                            <span asp-validation-for="CustomerCountry" class="text-danger"></span>
                                        </div>
                                        <div class="form-group row input-group-sm col-6">
                                            <label asp-for="CustomerCity" class="control-label">Customer City</label>
                                            <input asp-for="CustomerCity" class="form-control" />
                                            <span asp-validation-for="CustomerCity" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="form-group row input-group-sm">
                                        <input type="submit" value="Save Customer" class="btn btn-primary btn-sm" />
                                        <a class="btn btn-secondary btn-sm" asp-action="Index">Back to List</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

