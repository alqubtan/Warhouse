@model IEnumerable<SamaERP.Models.WarSupplier>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<div class="container body">
    <div class="main_container">
        <div class="right_col" role="main">
            <div>
                <div class="x_panel bg-transparent">
                    <div class="x_content">
                        <p>
                            <a class="btn btn-success btn-sm" asp-controller="WarSuppliers" asp-action="Create">New Supplier</a>
                        </p>
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="datatable" class="table table-sm table-striped table-bordered dataTable no-footer" style="width: 100%;" role="grid" aria-describedby="datatable_info">
                                    <thead>
                                        <tr>
                                            <th>
                                                Supplier Name
                                            </th>
                                            <th>
                                                Supplier Type
                                            </th>
                                            <th>
                                                Supplier Description
                                            </th>
                                            <th>
                                                Supplier PhoneNo.
                                            </th>
                                            <th>
                                                Supplier Email
                                            </th>
                                            <th>
                                                Supplier Address
                                            </th>
                                            <th>
                                                Supplier Country
                                            </th>
                                            <th>
                                                Supplier City
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SupplierName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SupplierType)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SupplierDescription)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SupplierPhoneNo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SupplierEmail)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SupplierAddress)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SupplierCountry)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SupplierCity)
                                            </td>

                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                                                    <i class="glyphicon glyphicon-pencil text-primary"> </i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="m-3">
                                                    <i class="glyphicon glyphicon-info-sign text-info"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" title="Delete">
                                                    <i class="glyphicon glyphicon-remove text-danger"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
            </div>
        </div>
    </div>
</div>
</div>






