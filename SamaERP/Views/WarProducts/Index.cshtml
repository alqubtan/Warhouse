@model IEnumerable<SamaERP.Models.WarProduct>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container body">
    <div class="main_container">
        <div class="right_col" role="main">
            <div>
                <div class="x_panel bg-transparent">
                    <div class="x_content">
                        <p>
                            <a class="btn btn-success btn-sm" asp-controller="WarProducts" asp-action="Create">New Product</a>
                        </p>
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="datatable" class="table table-sm table-striped table-bordered dataTable no-footer" style="width: 100%;" role="grid" aria-describedby="datatable_info">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Product Name
                                                </th>
                                                <th>
                                                    Product Description
                                                </th>
                                                <th>
                                                    Product Type
                                                </th>
                                                <th>
                                                    Measure Unit
                                                </th>
                                                <th>
                                                    Has Expire date
                                                </th>
                                                <th>
                                                    Expire Date
                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ProductName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ProductDescription)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ProductType)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Prod_MeasureUnit)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.HasExpireDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ProductExpireDate)
                                                </td>
                                               
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                                                        <i class="glyphicon glyphicon-pencil text-primary"> </i>
                                                    </a>
                                                    <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="m-3">
                                                        <i class="glyphicon glyphicon-info-sign text-info"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" title="Delete">
                                                        <i class="glyphicon glyphicon-remove text-danger"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


