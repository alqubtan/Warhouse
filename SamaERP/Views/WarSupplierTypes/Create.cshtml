@model SamaERP.Models.WarSupplierType

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container body">
    <div class="main_container">
        <div class="right_col" role="main">
            <div>
                <div class="x_panel bg-transparent">
                    <div class="x_content">
                        <h4>Add New Supplier Type</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-4">
                                <form asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group input-group-sm">
                                        <label asp-for="SupplierType" class="control-label"></label>
                                        <input asp-for="SupplierType" class="form-control" />
                                        <span asp-validation-for="SupplierType" class="text-danger">@ViewBag.exist_err</span>
                                    </div>
                                    <div class="form-group input-group-sm">
                                        <label asp-for="SupplierDescription" class="control-label"></label>
                                        <input asp-for="SupplierDescription" class="form-control" />
                                        <span asp-validation-for="SupplierDescription" class="text-danger"></span>
                                    </div>
                                    <div class="form-group input-group-sm">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                        <a class="btn btn-secondary btn-sm" asp-action="Index">Back to List</a>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
