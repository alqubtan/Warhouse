@model SamaERP.Models.Warehouse

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container body">
    <div class="main_container">
        <div class="right_col" role="main">
            <div>
                <div class="x_panel bg-transparent">
                    <div class="x_content">
                        <h3>Are you sure you want to delete this?</h3>
                        <div>
                            <h4>@Html.DisplayFor(model => model.WarhouseName)</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-2">
                                    Warhouse Name
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.WarhouseName)
                                </dd>
                                <dt class="col-sm-2">
                                    Warehouse Description
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.WarehouseDescription)
                                </dd>
                                <dt class="col-sm-2">
                                    Warehouse Branch
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.WarehouseBranch)
                                </dd>
                                <dt class="col-sm-2">
                                    Warehouse Address
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.WarehouseAddress)
                                </dd>
                            </dl>

                            <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                <a asp-action="Index">Back to List</a>
                            </form>
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>
</div>






