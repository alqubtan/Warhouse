@model SamaERP.Models.Warehouse

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container body">
    <div class="main_container">
        <div class="right_col" role="main">
            <div>
                <div class="x_panel bg-transparent">
                    <div class="x_content">
                        <div>
                            <h4>@Html.DisplayFor(model => model.WarhouseName)</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-2">
                                    Warhouse Name
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.WarhouseName)
                                </dd>
                                <dt class="col-sm-2">
                                    Warehouse Description
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.WarehouseDescription)
                                </dd>
                                <dt class="col-sm-2">
                                    Warehouse Branch
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.WarehouseBranch)
                                </dd>
                                <dt class="col-sm-2">
                                    Warehouse Address
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.WarehouseAddress)
                                </dd>
                            </dl>
                        </div>

                        <h4>@Html.DisplayFor(model => model.WarhouseName) Products</h4>

                        @if (ViewBag.warehouseProducts.Count > 0)
                        {
                            <table id="datatable" class="table table-sm table-striped table-bordered dataTable no-footer" style="width: 100%;" role="grid" aria-describedby="datatable_info">
                                <thead>
                                    <tr>
                                        <th>
                                            Product Name
                                        </th>
                                        <th>
                                            SN.
                                        </th>
                                        <th>
                                            Barcode
                                        </th>
                                        <th>
                                            Supplier
                                        </th>
                                        <th>
                                            Unit
                                        </th>
                                        <th>
                                            Quantity
                                        </th>
                                        <th>
                                            Reciverd Price
                                        </th>
                                        <th>
                                            Total Price
                                        </th>
                                        <th>
                                            Branch
                                        </th>
                                        <th>
                                            Warehouse
                                        </th>
                                        <th>
                                            Expire Date
                                        </th>

                                        <th>
                                            Recived Date
                                        </th>
                                        <th>
                                            Invoice No.
                                        </th>
                                        <th>
                                            Invoice Date
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.warehouseProducts)
                                    {
                                        <tr>
                                            <td>
                                                @item.ProductName
                                            </td>
                                            <td>
                                                @item.SNumber
                                            </td>
                                            <td>
                                                @item.ProductBarcode
                                            </td>
                                            <td>
                                                @item.ProductSupplier
                                            </td>
                                            <td>
                                                @item.ProductUnit
                                            </td>
                                            <td>
                                                @item.ProductQty
                                            </td>
                                            <td>
                                                @item.RecivedPrice
                                            </td>
                                            <td>
                                                @item.TotalPrice
                                            </td>
                                            <td>
                                                @item.BranchName
                                            </td>
                                            <td>
                                                @item.WarehouseName
                                            </td>
                                            <td>
                                                @item.ProductExpireDate
                                            </td>
                                            <td>
                                                @item.RecivedDate
                                            </td>
                                            <td>
                                                @item.InvoiceNumber
                                            </td>
                                            <td>
                                                @item.InvoiceDate
                                            </td>

                                            <td>
                                                <a asp-action="Edit" asp-controller="WarReceivedProducts" asp-route-id="@item.ID" title="Edit">
                                                    <i class="glyphicon glyphicon-pencil text-primary"> </i>
                                                </a>
                                                <a asp-action="Details" asp-controller="WarReceivedProducts" asp-route-id="@item.ID" title="Details" class="m-3">
                                                    <i class="glyphicon glyphicon-info-sign text-info"></i>
                                                </a>
                                                <a asp-action="Delete" asp-controller="WarReceivedProducts" asp-route-id="@item.ID" title="Delete">
                                                    <i class="glyphicon glyphicon-remove text-danger"></i>
                                                </a>
                                            </td>

                                        </tr>
                                    }


                                </tbody>
                            </table>
                        }
                        else

                        {
                            <div class="alert alert-dark w-50" role="alert">
                                No Products found.
                            </div>
                        }

                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>




